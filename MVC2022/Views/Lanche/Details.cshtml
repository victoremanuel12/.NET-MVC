@model Lanche
<div class="container">
    <div class="row">
        <div class="card" style="width: 18rem;">
            <img src=@Model.LancheImagemUrl class="img-fluid" alt="Imagem ilustrativa do lanche">
            <div class="card-body">
                <h2 class="card-title">@Model.LancheNome</h2>
                <p class="card-text">@Model.LancheDescricaoCurta</p>
                <div class="btn btn-group align-content-lg-end">
                    <a asp-controller="Lanche" asp-action="List" class="btn btn-outline-info">Ver todos os lanches</a>
                    <br/>
                    <a 
                        asp-controller="CarrinhoCompra" asp-action="AdicionarItemAoCarrinhoCompra" 
                        asp-route-lancheId ="@Model.LancheId" class="btn btn-primary " id="cardButton">
                        Adicionar ao carrinho
                    </a>


                </div>
            </div>
        </div>
    </div>
</div>

