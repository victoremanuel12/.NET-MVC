@model Lanche
<div class="col-sm-4 col-md-4 col-lg-4">
    <h2>@Model.LancheNome</h2>
    <img src="@Model.LancheImagemUrl" class="img-fluid">
    <h3>Preço: @Model.LanchePreco.ToString("c")</h3>
    <p> @Model.LancheDescricaoCurta</p>
    <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId">@Model.LancheNome</a>
    <button>
        <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemAoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">Adicionar ao carrinho</a>
    </button>
</div>
